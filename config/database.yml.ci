# Database configuration for GitLab CI/CD
default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: postgres
  password: postgres
  host: postgres
  port: 5432

test:
  <<: *default
  database: rails_app_test<%= ENV['TEST_ENV_NUMBER'] %>
