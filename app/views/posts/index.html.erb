<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Posts" %>

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">Posts</h1>
      <p class="py-6">Welcome to your DaisyUI-powered posts page!</p>

      <!-- DaisyUI Button -->
      <%= link_to "New post", new_post_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="container mx-auto p-4">
  <div id="posts" class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    <% @posts.each do |post| %>
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <%= render post %>
          <div class="card-actions justify-end">
            <%= link_to "Show this post", post, class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
